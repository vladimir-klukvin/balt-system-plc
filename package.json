{
    "name": "balt-system-plc",
    "displayName": "Balt-System PLC",
    "description": "A VSC extension to support Balt-System PLC work",
    "publisher": "Klukvin",
    "version": "0.2.1",
    "repository": {
        "url": "https://github.com/vladimir-klukvin/balt-system-plc"
    },
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./src/extension.js",
    "activationEvents": [
        "onLanguage:bsplc"
    ],
    "contributes": {
        "languages": [{
            "id": "bsplc",
            "aliases": ["Balt-System PLC"],
            "extensions": [".bsplc"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "bsplc",
            "scopeName": "source.bsplc",
            "path": "./syntaxes/bsplc.tmLanguage.json"
        }]
    }
}
